<?xml version="1.0" encoding="utf-8"?>
<!-- Network Security Configuration for Enterprise Flutter App -->
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- Production domains that require HTTPS -->
        <domain includeSubdomains="true">api.enterprise-app.com</domain>
        <domain includeSubdomains="true">auth.enterprise-app.com</domain>
        
        <!-- Certificate pinning for enhanced security -->
        <pin-set expiration="2025-12-31">
            <!-- Replace with your actual certificate pins -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
        
        <trust-anchors>
            <!-- Use system certificate authorities -->
            <certificates src="system"/>
            <!-- Optionally add custom certificate authorities -->
            <!-- <certificates src="user"/> -->
        </trust-anchors>
    </domain-config>
    
    <!-- Development/Debug configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.0/24</domain>
        <!-- Add other development domains as needed -->
    </domain-config>
    
    <!-- Base configuration for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Debug overrides (automatically disabled in release builds) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user"/>
            <certificates src="system"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>